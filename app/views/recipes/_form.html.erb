<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <ul>
  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name%>
    <%= ing.text_field :name %><br>

    <%= ing.label :attributes_quantity %>
    <%= ing.number_field :quantity %><br>
  <% end %>
  </ul>
  <%= f.submit %>
<% end %>
